{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/",
      "destination": "/frontend/account_system.html"
    },
    {
      "source": "/game",
      "destination": "/frontend/dice.html"
    },
    {
      "source": "/api/(.*)",
      "destination": "/backend/server.js"
    }
  ],
  "routes": [
    {
      "src": "/game",
      "dest": "/frontend/dice.html"
    }
  ]
}
